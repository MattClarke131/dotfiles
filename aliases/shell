#!/usr/bin/env zsh

# OVERWRITE ALIASES
alias cp='cp -i'
alias mv='mv -i'

# ALIASES
# ls behaves strangely on newer versions of macOS
if [ "$OSTYPE"==linux-gnu ]; then
    alias l='\ls --color=tty --group-directories-first'
else
    alias l='gls -Flh --group-directories-first'
fi
alias ll="\ls -lAh --group-directories-first --color=tty"
alias ls="echo use l"
alias lA="\ls -A --group-directories-first --color=tty"
alias -g g="| grep"
alias -g gi="| grep -i"
alias cd="echo use c"
alias cddot="\cd ~/dotfiles"
alias cl="clear"
alias ..='\cd ..; ls'
alias ...='\cd ...; ls'
alias ....='\cd ....; ls'
alias pud='\pushd'
alias pod='\popd'

# FUNCTIONS
# ls after cd
function c() {
  \cd "$1" || exit
  l
}

# mkdir and change to it
function mcd () {
  mkdir -p "$1"
  cd "$1" || exit
}
