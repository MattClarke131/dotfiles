#!/usr/bin/env zsh
# git aliases

alias rpull="pull --rebase"
alias gcob="git checkout -b"
alias gcop="git checkout -p"
alias grbo='git rebase origin/"$(git_main_branch)"'
alias gbm='git branch --move'
alias gdm="git diff $(git_current_branch)"
alias gstam="git stash push -m"
alias gstap="git stash push -p"
alias vgdm=vim_git_diff
function vim_git_diff {
  vim $(gd --name-only main | xargs)
}

# remove oh my zsh git pull aliases
unalias gl
unalias ggpull
unalias glum
unalias gpoat
unalias grhh
